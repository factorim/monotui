{
  "name": "@factorim/monotui",
  "version": "0.1.0",
  "description": "MonoTUI is a **Text User Interface (TUI)** dashboard for managing **Node monorepos**.",
  "keywords": [],
  "homepage": "https://github.com/factorim/monotui#readme",
  "bugs": {
    "url": "https://github.com/factorim/monotui/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/factorim/monotui.git"
  },
  "license": "ISC",
  "author": "Factorim",
  "type": "module",
  "exports": {
    "types": "./dist/index.d.ts",
    "default": "./dist/index.js"
  },
  "main": "index.js",
  "bin": {
    "monotui": "dist/index.js",
    "monotui-init": "dist/bin/init.js",
    "monotui-trace-warnings": "dist/bin/trace-warnings.js"
  },
  "scripts": {
    "prepare": "husky",
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "start:trace-warnings": "node --trace-warnings dist/index.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "changeset": "changeset",
    "changeset:version": "changeset version && pnpm install --no-frozen-lockfile && pnpm format",
    "changeset:publish": "changeset publish"
  },
  "dependencies": {
    "@inkjs/ui": "^2.0.0",
    "ink": "^6.7.0",
    "pino": "^10.3.1",
    "pino-pretty": "^13.1.3",
    "react": "^19.2.4",
    "read-pkg": "^10.1.0",
    "type-fest": "^5.4.4",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.14",
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@jest/globals": "^30.2.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.2.3",
    "@types/react": "^19.2.14",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@10.28.0",
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json}": [
      "biome check --write --no-errors-on-unmatched",
      "bash -c 'pnpm biome check .'"
    ]
  }
}
